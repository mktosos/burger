<h1>Burgers</h1>

<h2>Burgers Ordered</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{burger_name}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devou">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> eaten!<br>
    <input type="radio" name="devoured" value="0"> not eaten
  </div>

  <button class = "addBurger" type="submit">Add Burger</button>
</form>
